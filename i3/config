#i3 config file (v4)
font pango:monospace 8

default_orientation horizontal

workspace_layout tabbed

title_align center

default_border normal

hide_edge_borders vertical

smart_borders on

exec --no-startup-id feh --bg-scale ~/bg/bg.jpg

client.focused #f5c5c5c #5c5c5c #ffffff #f7bd1b #285577
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        #333333 #222222 #888888 #292d2e   #222222
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c
client.background       #ffffff

focus_follows_mouse no

popup_during_fullscreen smart

focus_wrapping workspace

gaps outer 10px
gaps inner 10px

# key conf
set $mod Mod4
# Reload configuration i3
bindsysm $mod+r reload
# Open terminal
bindsysm $mod+t exec i3-sensible-terminal
# Open application launcher
bindsysm $mod+Return exec rofi -show run
# Kill focused aplication
bindsysm $mod+q kill

# Focus
bindsysm $mod+Up focus up
bindsysm $mod+Down focus down
bindsysm $mod+Left focus left
bindsysm $mod+Right focus right

# Move
bindsysm $mod+Shift+Up move up
bindsysm $mod+Shift+Down move down
bindsysm $mod+Shift+Left move left
bindsysm $mod+Shift+Right move right

# Split
bindsysm $mod+h split h
bindsysm $mod+v split v

smart_gaps on

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"

# Switch workspaces
bindsysm $mod+1 workspace number $ws1
bindsysm $mod+2 workspace number $ws2
bindsysm $mod+3 workspace number $ws3

# Move focused to workspace
bindsysm $mod+Shift+1 move container to workspace number $ws1
bindsysm $mod+Shift+2 move container to workspace number $ws2
bindsysm $mod+Shift+3 move container to workspace number $ws3

bar {
  gaps outer 10px
  status_command i3status
}
